<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<!-- Own Stylesheet --> 
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
<%- include('./partials/header')  %> 
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Productos</h2>
		</div>
		<% listaProductosJS.forEach(producto => { %>
		<div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
				<a href="/product/<%= producto.id %>/<%= producto.category%>">
					<figure class="product-box_image">
						<img src="/images/products/<%= producto.image%>" alt="imagen de producto">
					</figure>
					<article class="product-box_data">
						<h2>$ <%= producto.price %></h2>
						<% if (producto.discount > 0) { %>
						<span><%= producto.discount %>% OFF</span>
						<% } %>
						<p><%= producto.description %></p>
						<i class="fas fa-truck"></i>
					</article>
				</a>
			</section>
		</div>
		<% }) %>
	</div>
</div>	
<%- include('./partials/footer') %> 
</body>